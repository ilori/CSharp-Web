@model Movies.App.Models.BindingModels.AddMovieBindingModel
<div class="container py-5">
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="row mt-5">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Add Movie</h3>
                        </div>
                        <div class="card-body">
                            <form class="form-group" method="POST">
                                <div class="form-group">
                                    <label asp-for="Title">Title</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" asp-for="Title" placeholder="Title...">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Director">Director</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" asp-for="Director" placeholder="Director Name...">
                                    <span asp-validation-for="Director" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Description</label>
                                    <textarea type="text" class="form-control form-control-lg rounded-0" asp-for="Description" rows="3" style="resize: none;" placeholder="Description..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CoverImageUrl">ImageURL</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" asp-for="CoverImageUrl" placeholder="CoverImageURL...">
                                    <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                                </div>
                                <div>
                                </div>
                                <button type="submit" class="btn btn-custom btn-lg float-right">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using Movies.App.Models.ViewModels
@model MovieBorrowViewModel

<div class="row mt-5">
    <div class="col-4">
        <img width="414" src="@Model.CoverImageUrl" alt="Img"/>
    </div>
    <div class="col-md-6 mx-auto">
        <div class="card rounded-0">
            <div class="card-header">
                <h3 class="mb-0">Rent Movie</h3>
            </div>
            <div class="card-body">
                <form class="form-group" method="POST">
                    <div class="form-group">
                        <label asp-for="RentDate">Rent Date</label>
                        <input type="text" class="form-control form-control-lg rounded-0" asp-for="RentDate" placeholder="dd/MM/yyyy...">
                        @if(this.ViewData.ContainsKey("borrowDate"))
                        {
                            <span class="text-primary">@this.ViewData["borrowDate"]</span>
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="ReturnDate">Return Date</label>
                        <input type="text" class="form-control form-control-lg rounded-0" asp-for="ReturnDate" placeholder="dd/MM/yyyy...">
                        @if(this.ViewData.ContainsKey("returnDate"))
                        {
                            <span class="text-primary">@this.ViewData["returnDate"]</span>
                        }
                        @if(this.ViewData.ContainsKey("date"))
                        {
                            <span class="text-primary">@this.ViewData["date"]</span>
                        }
                    </div>
                    <div class="form-group">
                        <select asp-for="BorrowerId" asp-items="@Model.Borrowers" class="custom-select col-md-12"></select>
                        @if(this.ViewData.ContainsKey("borrower"))
                        {
                            <span class="text-primary">@this.ViewData["borrower"]</span>
                        }
                    </div>
                    <div>
                    </div>
                    <button type="submit" class="mt-0 btn btn-custom btn-lg offset-7">Rent</button>
                    <a href="/" class="btn btn-warning btn-lg ml-4">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</div>
@using Movies.App.Models.BindingModels
@model AddBorrowerBindingModel
<div class="container py-5">
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="row mt-5">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Add Borrower</h3>
                        </div>
                        <div class="card-body">
                            @if(this.ViewData.ContainsKey("name"))
                            {
                                <div class="alert alert-primary text-center">
                                    <b>@this.ViewData["name"]</b>
                                </div>
                            }
                            <form class="form-group" method="POST">
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" asp-for="Name" placeholder="Name...">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address">Address</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" asp-for="Address" placeholder="Address...">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-custom btn-lg float-right">Add</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
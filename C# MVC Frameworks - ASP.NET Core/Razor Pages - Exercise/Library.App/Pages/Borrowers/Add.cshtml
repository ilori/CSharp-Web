@page
@model AddModel
<h1 class="mt-4">Add Borrower</h1>

<form method="post" class="mt-5 offset-4">
    @if (this.Model.Name != null && this.Model.ModelState.ContainsKey(this.Model.Name))
    {
        <div class="alert alert-danger text-center offset-1 col-md-4">
            @this.Model.ModelState[this.Model.Name].Errors.First().ErrorMessage
        </div>
    }
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-1 col-form-label">
            <b>Name</b>
        </label>
        <div class="col-md-4 pr-0">
            <input asp-for="Name" type="text" class="form-control" placeholder="Name...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-1 col-form-label">
            <b>Address</b>
        </label>
        <div class="col-sm-4 pr-0">
            <input asp-for="Address" type="text" class="form-control" placeholder="Address...">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-4">
        <div class="col-md-2 offset-1">
            <input type="submit" class="btn btn-success" name="name" value="Submit"/>
        </div>
        <div>
            <a asp-page="/Index">
                <input type="button" class="btn btn-info" value="Cancel"/>
            </a>
        </div>
    </div>
</form>
@page "{id:int?}"
@model StatusModel


<h1 class="mt-5">Book Status for: <a asp-page="/Books/Details" asp-route-id="@Model.Book.Id">@Model.Book.Title</a></h1>

<div class="row">
    <div class="col-2">
        <img width="265" src="@Model.Book.CoverImage" alt="@Model.Book.Title"/>
    </div>
    <div class="col-8 offset-2">
        <table class="table-dark table">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">Borrow Date</th>
                <th scope="col">Return Date</th>
            </tr>
            </thead>
            <tbody class="text-center">
            @foreach (var date in @Model.Book.BookHistories)
            {
                <tr>
                    <td>
                        @date.BorrowDate.ToString("dd-MM-yyyy")
                    </td>
                    <td>
                        @(date.ReturnDate != null ? date.ReturnDate.Value.ToString("dd-MM-yyyy") : "Borrowed Indefinitely")
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <a class="btn btn-info" asp-page="/Index">Cancel</a>
    </div>
</div>
@page
@model AddModel
<h1 class="mt-4">Add Book</h1>
<form method="post" class="col-md-8 offset-3 mt-5">
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label">
            <b>Author</b>
        </label>
        <div class="col-sm-4">
            <input asp-for="Author" type="text" class="form-control" placeholder="Author...">
            <span asp-validation-for="Author" class="text-danger text-center"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">
            <b>Title</b>
        </label>
        <div class="col-sm-4">
            <input asp-for="Title" type="text" class="form-control" placeholder="Title...">
            <span asp-validation-for="Title" class="text-danger text-center"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">
            <b>Description</b>
        </label>
        <div class="col-sm-4">
            <textarea asp-for="Description" rows="3" style="resize: none" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger text-center"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CoverImage" class="col-sm-2 col-form-label">
            <b>Image URL</b>
        </label>
        <div class="col-sm-4">
            <input asp-for="CoverImage" type="text" class="form-control" placeholder="Image URL...">
            <span asp-validation-for="CoverImage" class="text-danger text-center"></span>
        </div>
    </div>
    <div class="form-group row mt-4">
        <div class="col-md-2 offset-2">
            <input type="submit" class="btn btn-success" name="name" value="Add Book"/>
        </div>
        <div>
            <a asp-page="/Index">
                <input type="button" class="btn btn-info" value="Cancel"/>
            </a>
        </div>
    </div>
</form>